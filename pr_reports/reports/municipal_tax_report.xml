<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="municipal_tax">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2>Municipal Tax Report</h2>
                        <div class="row mt32">
                            <div>
                                <div class="col-xs-4">
                                    <strong>
                                        <span t-esc="docs.tax_id.name"/>
                                    </strong>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Date from :</strong>
                                    <span t-esc="docs.start_date"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Date to :</strong>
                                    <span t-esc="docs.end_date"/>
                                </div>
                            </div>
                        </div>
                        <br/><br/><br/>
                        <t t-value="docs.get_amount()" t-set="amounts"/>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Taxed Invoices</td>
                                    <td>
                                        <t t-esc="amounts.get('invoice_taxed')"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Untaxed Invoices</td>
                                    <td>
                                        <t t-esc="amounts.get('invoice_untaxed')"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Tax</td>
                                    <td>
                                        <t t-esc="amounts.get('tax_colected')"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right"><strong>Total</strong></td>
                                    <td >
                                        <t t-esc="amounts.get('invoice')"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>

        </template>

        <report
                id="municipal_tax_report"
                model="report.account.municipal.tax"
                string="Municipal Tax"
                report_type="qweb-pdf"
                name="pr_reports.municipal_tax"
                file="pr_reports.municipal_tax"
                menu="False"
        />

    </data>
</openerp>