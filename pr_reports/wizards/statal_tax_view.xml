<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_statal_tax" model="ir.ui.view">
            <field name="name">Statal Tax Report</field>
            <field name="model">report.account.statal.tax</field>
            <field name="arch" type="xml">
                <form string="Statal Tax Report">
                    <sheet>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="type"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_statal_tax" model="ir.actions.act_window">
            <field name="name">Statal Tax Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.account.statal.tax</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>