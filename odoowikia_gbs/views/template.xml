<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


       <template id="gbs_checkout" inherit_id="website_sale.cart">
           <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap">
                <div class="container oe_website_sale">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 oe_cart">
                            <div class="row">
                                <t t-call="website_sale.wizard_checkout">
                                    <t t-set="step" t-value="10" />
                                </t>
                            </div>
                            <div class="row">
                                <div class="col-md-12 o_website_sale_rightfit">
                                    <h2 class="mb8 mt8">Shopping Cart</h2>
                                    <div t-if="abandoned_proceed or access_token" class="mt8 mb8 alert alert-info"> <!-- abandoned cart choices -->
                                        <t t-if="abandoned_proceed">
                                            <p>Your previous cart has already been completed.</p>
                                            <p t-if="website_sale_order">Please proceed your current cart.</p>
                                        </t>
                                        <t t-if="access_token">
                                            <p>This is your current cart.</p>
                                            <p>
                                                <strong><a t-attf-href="/shop/cart/?access_token=#{access_token}&amp;revive=squash">Click here</a></strong> if you want to restore your previous cart. Your current cart will be replaced with your previous cart.</p>
                                            <p>
                                                <strong><a t-attf-href="/shop/cart/?access_token=#{access_token}&amp;revive=merge">Click here</a></strong> if you want to merge your previous cart into current cart.
                                            </p>
                                        </t>
                                    </div>
                                    <t t-call="website_sale.cart_lines" />
                                    <div class="clearfix" />

<!--                                        <t t-if="minimum_prize">-->
<!--                                            <a id="checkout_button"  t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" style="background-color:grey" class="btn pull-right mb32 mr8" >-->
<!--                                                <span class="hidden-xs">Process Checkout</span>-->
<!--                                                <span class="visible-xs-inline">Checkout</span>-->
<!--                                                <span class="fa fa-long-arrow-right" />-->
<!--                                            </a>-->

<!--                                               <div t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="row pull-right mb32 mr8">-->
<!--                                                <p style="color:#501f1c"><strong><h3>Warning! Minimum Purchase prize should be more then <t t-esc="minimum_prize"></t></h3></strong></p>-->
<!--                                               </div>-->
<!--                                        </t>-->
                                        <t t-if="minimum_prize">
                                            <span class="hidden" id="temp-value" t-esc="minimum_prize"></span>
                                            <a id="checkout_button"  t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn-primary pull-right mb32 mr8"  >
                                                <span class="hidden-xs" >Process Checkout</span>
                                                <span class="visible-xs-inline">Checkout</span>
                                                <span class="fa fa-long-arrow-right" />
                                            </a>
                                            <p  class='pull-right mb32 mr8' ><h5 id='gbs_para' style="display:none" ><strong style='font-size:18px'><span>Warning! Minimum Purchase price should be more than </span><span t-esc="minimum_prize"> </span></strong></h5></p>
                                        </t>
                                        <t t-if="not minimum_prize">
                                            <a id="checkout_button"  t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn-primary pull-right mb32 mr8"  >
                                                <span class="hidden-xs" >Process Checkout</span>
                                                <span class="visible-xs-inline">Checkout</span>
                                                <span class="fa fa-long-arrow-right" />
                                            </a>
                                        </t>
                                    <div class="oe_structure" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure" />
            </div>
           </xpath>
       </template>






    </data>
</odoo>