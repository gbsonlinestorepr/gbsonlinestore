<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report
                id="action_report_stock_product_report"
                model="stock.product.report"
                report_type="qweb-pdf"
                string="Product Report"
                name="gbs_updates_reports.report_stock_product_report"
                file="gbs_updates_reports.report_stock_product_report"
                menu="False"
        />

        <template id="report_stock_product_report">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <table class="o_list_view table table-condensed table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>On Hand</th>
                                <th>To Delivery</th>
                                <th>Transit Puchase</th>
                                <th>Forecasted</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs.product_ids" t-as="product_id">
                                <tr>
                                    <td>
                                        <span t-esc="product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="product_id.qty_available"/>
                                    </td>
                                    <td>
                                        <span t-esc="product_id.outgoing_qty * -1"/>
                                    </td>
                                    <td>
                                        <span t-esc="product_id.incoming_qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="product_id.virtual_available"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>

        </template>

    </data>
</openerp>