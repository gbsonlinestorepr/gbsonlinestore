<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_product_report_view" model="ir.ui.view">
            <field name="name">stock.product.report</field>
            <field name="model">stock.product.report</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                            <field name="product_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Imprimir" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_product_report" model="ir.actions.act_window">
            <field name="name">Product Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.product.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_stock_product_report" name="Product Report"
                  parent="stock.menu_warehouse_report" action="action_stock_product_report"/>
    </data>
</openerp>