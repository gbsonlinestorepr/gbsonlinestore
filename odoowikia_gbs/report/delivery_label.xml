<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	
			<template id="custom_odoowikia">
				<div class="header">
				</div>
				 <div class="article o_report_layout_clean">
            			<t t-raw="0" />
        		</div>
				<div class="footer">
				</div>
			</template>
		
         <template id="odoowikia_report_delivery_label">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
			<t t-call="odoowikia_gbs.custom_odoowikia">
				 
                <div class="page">
                    <div class="row" >
                        <div class="pull-right">
                                <div t-field="o.scheduled_date" t-field-options='{"format": "MM/dd/yyyy"}'/>
                        </div>
                    </div>
					<div class="row" >
                        <div class="pull-left">
				                   <div> <div class="col-xs-5" style="margin-left:-15px;font-size:13px">   FROM# </div><div class="col-xs-7" style="margin-left:-20px"><span t-field="o.company_id.name" style="font-size:14px"/> </div></div><br/>
									  <div> <div class="col-xs-5" style="margin-left:-15px;font-size:13px">SHIP TO#</div><div class="col-xs-8" style="margin-left:-20px"> <span style="font-size:14px" t-field="o.partner_id"
				                           t-options='{"widget": "contact", "fields": ["address", "name", "zip"], "no_marker": True}'/>
													</div>
								
									</div><br/>
									<br/><br/><br/>
									<div style="margin-top: 20px;">
										ORDER#: <span t-field="o.name" style="font-size:13px"/> <br/>
						                 REFERENCE:  <span t-field="o.origin" style="font-size:13px"/><br/>
										TOTAL ITEMS:  
										<t t-set="i" t-value="int(0)"/>
										<t t-foreach="o.move_lines" t-as="move">
										 	<t t-set="i" t-value="move.quantity_done + i" />
										</t>
										<span t-esc="int(i)" style="font-size:13px"/>	
									</div>
                        </div>
                    </div>
                </div>
			
        	 </t>
    </template>

    <template id="report_deliverylabel">
        <t t-foreach="docs" t-as="o">
            <t t-call="odoowikia_gbs.odoowikia_report_delivery_label" t-lang="o.partner_id.lang"/>
        </t>
    </template>

</odoo>
