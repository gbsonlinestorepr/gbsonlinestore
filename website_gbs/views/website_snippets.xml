    <template id="snippet_shop_items" name="Shop Items">
        <section class="snippet_shop_items">
            <div class="container text-center">
                <div class="row">
                    <div><span>Title</span></div>
                    <div class="card col-lg-2 col-md-3 col-sd-6 card-size-fix shop-item-gbs shop-product-item">
                        <div class="card-img">
                            <span itemprop="image" data-oe-type="image">
                                <img class="img-responsive img-gbs" src="/web/image/website.s_reference_demo_image_1"/>
                            </span>
                        </div>
                        <section class="card-body">
                            <h6>
                                Monin Almond (Orgeat) Syrup 1L
                            </h6>
                            <div class="row no-gutters">
                                <div class="text-bg col-sm-12">
                                    <b>
                                        <span class="oe_currency_value">9.50</span>
                                    </b>
                                </div>
                                <div class="col-12">
                                    <a class="btn btn-default btn-card" data-oe-field="arch"
                                       href="#">
                                        See Details
                                    </a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
    </template>

